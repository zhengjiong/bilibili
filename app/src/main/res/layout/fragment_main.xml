<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/fl_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/tab_layout"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <!--
    tl_iconHeight:设置icon高度(仅支持CommonTabLayout)
    tl_tab_space_equal:设置tab大小等分
    tl_textSelectColor:设置字体选中颜色
    tl_textUnselectColor:设置字体未选中颜色
    tl_textsize:设置字体大小
    tl_underline_color:设置下划线颜色
    tl_underline_gravity:设置下划线上方(TOP)还是下方(BOTTOM)
    tl_underline_height:设置下划线高度
    -->
    <com.flyco.tablayout.CommonTabLayout
        android:id="@+id/tab_layout"
        android:layout_width="0dp"
        android:layout_height="46dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:tl_iconHeight="18dp"
        app:tl_iconWidth="18dp"
        app:tl_tab_space_equal="true"
        app:tl_textSelectColor="@color/bottom_bar_text_select_nav_home"
        app:tl_textUnselectColor="@color/bottom_bar_text_unselect_nav_home"
        app:tl_textsize="@dimen/bottom_bar_text_nav_home"
        app:tl_underline_color="@color/bottom_bar_under_line_nav_home"
        app:tl_underline_gravity="TOP"
        app:tl_underline_height="1px"
        />
</android.support.constraint.ConstraintLayout>